extends ../layouts/sidebar-layout

block header
	include ../includes/header

block sidebar
	div(ng-controller="marketGroupController").sidebar-container
		.sidebar-left
			accordiancontainer(children="data.marketGroupAccordian.children")
		.sidebar-right
			.upper-sidebar-right
				div(ng-repeat="type in data.activeMarketGroupTypes", ng-click="typeSelect(type.id)").sidebar-selectable {{ type.name }}
			.lower-sidebar-right
				h5 {{ data.activeType.name }}
				p {{ data.activeType.id }}
				p {{ data.activeType.description }}

				{{ data.activeType }}

block main
	div(ng-controller="typeDisplayController")
		

block footer
	include ../includes/footer